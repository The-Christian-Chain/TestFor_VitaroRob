<p id="notice"><%= notice %></p>
<%= flash[:danger]%>
<%= flash[:message]%>
<p>
  <strong>Author:</strong>
  <%= @post.member.profile.first_name + " " + @post.member.profile.last_name %>
</p>

<p>
  <strong>ID:</strong>
  <%= @post.id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= @post.image %>
</p>

<p>
  <strong>Location:</strong>
  <%= @post.location %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Status:</strong>
  <%= Post::STATUSED.find {|item| item[1] == @post.status }[0] %>
</p>

<p>
  <strong>Visibility:</strong>
  <%= Post::VISIBILITIED.find {|item| item[1] == @post.visibility }[0] %>
</p>

<p>
  <strong>Allow comments:</strong>
  <%= Post::ALLOW_COMMENTS.find {|item| item[1] == @post.allow_comments }[0] %>
</p>

<p>
  <strong>Archived:</strong>
  <%= Post::ARCHIVED.find {|item| item[1] == @post.archived }[0] %>
</p>

<p>
  <strong>Subscription:</strong>
  <%= Post::SUBSCRIPTIONED.find {|item| item[1] == @post.subscription }[0] %>
</p>

<p>
  <strong>Sections:</strong>
  <%= section_links(@post.all_sections) %>
</p>

<p>
  <strong>Categories:</strong>
  <%= category_links(@post.all_categories) %>
</p>

<p>
  <strong>Tags:</strong>
    <%= tag_links(@post.all_tags) %>
</p>

<h5>Comments</h5>
<%= render 'comments/comment_form' %>

<div id="comments" data-post-id="<%= @post.id %>">
  <%= render @post.comments %>
</div>

<%= render 'post_links' %>