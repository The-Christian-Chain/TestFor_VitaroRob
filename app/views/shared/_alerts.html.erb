<% flash.each do |key, value| %>
  <% 
    if key == 'notice' 
      key = 'info'
    end
  %>
  <div class="alert alert-<%= key %> alert-dismissible fade show">
    <%= value.try(:html_safe) %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      <%= flash.discard(flash) %>
    </button>
  </div>
<% end %>