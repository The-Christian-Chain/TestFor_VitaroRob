<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="<%= root_path %>">TCC - Applicant Testing App 1</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "FAQs", faq_path, class:"nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= link_to "About Us", about_path, class:"nav-link dropdown-toggle", "data-toggle"=>"dropdown", role:"button", "aria-haspopup"=>"true", "aria-expanded"=>"false" %>
          <div class="dropdown-menu">
            <%= link_to "Who We Are", about_path, class:"dropdown-item" %>
            <%= link_to "Social Connections", social_path, class:"dropdown-item" %>
            <%= link_to "Contact Us", contact_path, class:"dropdown-item" %>
            <div role="separator" class="dropdown-divider"></div>
            <%= link_to "Media Kit", media_path, class:"dropdown-item" %>
            <%= link_to "Terms of Use", terms_path, class:"dropdown-item" %>
            <%= link_to "Privacy Policy", privacy_path, class:"dropdown-item" %>
            <%= link_to "Sitemap", sitemap_path, class:"dropdown-item" %>
          </div>
        </li>
      </ul>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signin_modal" style="float:right;">
        <% if @member.nil? %>
          Sign In
        <% else %>
          <%= @member_display_name %>
        <% end %>
      </button>
    </div>
  </nav>
</header>