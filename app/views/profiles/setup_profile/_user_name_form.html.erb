<p style="font-weight: bold">Please note: Your username will not be able to be changed after it is created.</p>

<%= form_with(model: @profile, local: true) do |f| %>
  <%= render 'profiles/setup_profile/form/errors' %>
    <% temp_user_name = @member.profile.user_name %>
      <div class="row">
        <div class="col-2">
          <h3 for="user_name" style="text-align: right;">Username:</h3>    
        </div>
        <div class="col-3">
          <%= f.text_field :user_name, id: :profile_user_name, class: "form-control", placeholder: temp_user_name %>   
        </div>
        <div class="col-2">
          <%= f.hidden_field :user_name_created, value: true %>
          <%= f.hidden_field :reg_step, value: '3' %>
          <%= f.submit "Create Username", class: "btn btn-primary" %>
        </div>
        <div class="col-1">
          <%= render 'profiles/setup_profile/skip_button'%>
        </div>
      </div>

<% end %>