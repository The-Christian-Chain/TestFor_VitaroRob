<h3>Step 3: Want to get social?</h3>

<%= form_with(model: @profile, local: true) do |f| %>
  <%= render 'profiles/setup_profile/form/errors' %>

  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend" >
            <a href="https://www.facebook.com/" target="_blank">
              <i class="input-group-text fa fa-facebook fa-2x" style="color: #3B5998;"></i>
            </a>
          </div>
          <div class="input-group-prepend">
            <span class="input-group-text" id="facebook_url">https://www.facebook.com/</span>
          </div>
          <%= f.text_field :facebook, class: 'form-control', id: 'facebook', 'aria-describedby' => 'facebook_url' %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <a href="https://twitter.com/" target="_blank">
              <i class="input-group-text fa fa-twitter fa-2x" style="color: #1dcaff;"></i>
            </a>
          </div>
          <div class="input-group-prepend">
            <span class="input-group-text" id="twitter_url">https://twitter.com/</span>
          </div> 
          <%= f.text_field :twitter, class: 'form-control', id: 'twitter', 'aria-describedby' => 'twitter_url'  %>
        </div>
      </div>

    </div>
    <div class="col-6">
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <a href="https://www.instagram.com/" target="_blank">
              <i class="input-group-text fa fa-instagram fa-2x" style="color: #8a3ab9;"></i>
            </a>
          </div>
          <div class="input-group-prepend">
            <span class="input-group-text" id="instagram_url">https://www.instagram.com/</span>
          </div> 
          <%= f.text_field :instagram, class: 'form-control', id: 'instagram', 'aria-describedby' => 'instagram_url'  %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <a href="https://www.pinterest.com/" target="_blank">
              <i class="input-group-text fa fa-pinterest fa-2x" style="color: #C92228;"></i>
            </a>
          </div>
          <div class="input-group-prepend">
            <span class="input-group-text" id="pinterest_url">https://www.pinterest.com/</span>
          </div> 
          <%= f.text_field :pinterest, class: 'form-control', id: 'pinterest', 'aria-describedby' => 'pinterest_url'  %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <a href="https://www.linkedin.com/in/" target="_blank">
              <i class="input-group-text fa fa-linkedin fa-2x" style="color: #0e76a8;"></i>
            </a>
          </div>
          <div class="input-group-prepend">
            <span class="input-group-text" id="linkedin_url">https://www.linkedin.com/in/</span>
          </div> 
          <%= f.text_field :linkedin, class: 'form-control', id: 'linkedin', 'aria-describedby' => 'linkedin_url'  %>
        </div>
      </div>
    </div>

  </div>

  <%= f.hidden_field :reg_step, value: '5' %>
  <%= f.submit 'Next Step', class: 'btn btn-primary' %>
<% end %>